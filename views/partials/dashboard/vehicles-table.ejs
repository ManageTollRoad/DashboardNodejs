<div class="row">
    <div class="col-lg-6 col-md-12" style="max-height: 640px;">
      <div class="card">
        <div class="card-header card-header-info" style="background: linear-gradient(
          90deg
          , rgba(238,139,47,1) 0%, rgba(255,0,53,1) 100%);
              box-shadow: 0 4px 20px 0px rgb(0 0 0 / 14%), 0 7px 10px -5px rgb(212 0 0 / 40%);">
          <h4 class="card-title">Vehicles in the road</h4>
        </div>
        <div class="card-body table-responsive" style="overflow: auto;max-height: 591px;">
          <table class="table table-hover" id="all-table">
            <thead class="">
              <th>ID</th>
              <th>Vehicle type</th>
              <th>Road action</th>
              <th>Section</th>
              <th>Day of week</th>
              <th>Hour</th>
              <th>Day type</th>
            </thead>
            <%- include('./all-table'); %>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-6 col-md-12" style="max-height: 640px;">
        <div class="card">
            <div class="card-header card-header-success" style="background: linear-gradient(
              90deg
              , rgba(238,139,47,1) 0%, rgba(255,0,53,1) 100%);
                  box-shadow: 0 4px 20px 0px rgb(0 0 0 / 14%), 0 7px 10px -5px rgb(212 0 0 / 40%);">
              <h4 class="card-title">BigML data</h4>
            </div>
          <div class="card-body table-responsive" style="overflow: auto;max-height: 591px;">
            <table class="table table-hover" id="confusion-matrix">
                <tbody>
                  <% matrix.forEach((row,rowIndex) => { %>
                    <tr id="tr-<%= rowIndex %>">
                      <% row.forEach((cell,cellIndex) => { %>
                        <%
                          const isFirst = rowIndex === 0 && cellIndex === 0;
                          const colored = (rowIndex === 0 || cellIndex === 0) && 'background: #fff4f0;';
                        %>
                        <td id="td-<%= rowIndex %>_<%= cellIndex %>" style="<%= colored %>"><%= !isFirst ? cell : '' %></td>
                      <% }); %>
                    </tr>
                  <% }); %>
                </tbody>
            </table>
            <p style="font-size:18px;font-weight:bold;">Accuracy: <span id="confusion-matrix-acc"><%= matrixAccuracy %></span></p>
          </div>
        </div>
      </div>
</div>